// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  walletAddress String   @id @map("wallet_address")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  player1Games GameSession[] @relation("Player1Games")
  player2Games GameSession[] @relation("Player2Games")
  wonGames     GameSession[] @relation("WinnerGames")

  @@map("users")
}

model GameSession {
  id            Int       @id @default(autoincrement())
  roomId        String    @map("room_id")
  gameType      String    @map("game_type")
  player1Wallet String    @map("player1_wallet")
  player2Wallet String    @map("player2_wallet")
  player1Score  Int       @default(0) @map("player1_score")
  player2Score  Int       @default(0) @map("player2_score")
  winnerWallet  String?   @map("winner_wallet")
  status        String    @default("active")
  startedAt     DateTime  @default(now()) @map("started_at")
  endedAt       DateTime? @map("ended_at")

  // Relations
  player1 User  @relation("Player1Games", fields: [player1Wallet], references: [walletAddress])
  player2 User  @relation("Player2Games", fields: [player2Wallet], references: [walletAddress])
  winner  User? @relation("WinnerGames", fields: [winnerWallet], references: [walletAddress])

  @@map("game_sessions")
}
